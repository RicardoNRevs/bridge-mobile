{
  "expo": {
    "name": "bridge",
    "slug": "bridge",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bridge",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ricardodnr.bridge"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/bridge-logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ricardodnr.bridge"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/bridge-logo-white.png",
          "backgroundColor": "#301038",
          "imageWidth": 180
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
